<p class="notice"><%= notice %></p>

<h1>Books</h1>


<table class="tabel">
  <thead>
    <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
    </tr>
  </thead>
 <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="show">
        <%= link_to "Show",book_path(book.id) %>
      </td>
      <td class="edit">
        <%= link_to "Edit",edit_book_path(book.id) %>
      </td>
      <td class="destroy">
        <%= link_to "Destroy",book_path(book.id),method: :delete ,"data-confirm" => "Are you sure?"%>
      </td>
    </tr>
  </tbody>
 <% end %>
</table>


<!--新規投稿-->
<h2>
  <div class="newbook">New book</div>
</h2>

  <!--エラー時-->
<% if @book.errors.any? %>
  <div class="errors">
    <p class="errors_title">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </p>
    <ul class="errors_body">
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


  <!--フォーム/#エラー箇所表記未実装-->
<%= form_with model:@book,local:true do |f| %>
    <div class="title_new">Title</div>
    <%= f.text_field :title %>
    <div class="body_new">Body</div>
    <%= f.text_area :body %>
    <div class="create_new">
    <%= f.submit 'Create Book' %></div>
<% end %>