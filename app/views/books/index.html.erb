<h1>Books</h1>

<% @books.each do |book| %>

  <!--index-->
  <div class="index">
    <p class="title">Title</p>
      <span><%= book.title %></span>
    <p class="body">Body</p>
      <span><%= book.body %></span>
  </div>

  <!--コマンド-->
  <div class="command">
    <div class="show">
      <%= link_to "Show",SHOW_path(book.id) %>
    </div>
    <div class="edit">
      <%= link_to "Edit",EDIT_path(book.id) %>
    </div>
    <div class="destroy">
      <%= link_to "Destroy",DELETE_path(book.id),method: :delete %>
    </div>
  </div>

<% end %>

<!--新規投稿-->
<h3>
  <div class="newbook">New book</div>
</h3>

  <!--エラー時-->
<div class="errors">
  <% if @book.errors.any? %>
    <p class="errors_title">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </p>
    <p class="errors_body">
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </p>
  <% end %>
</div>

  <!--フォーム-->
<%= form_with model:@book,url:"/books",local:true do |f| %>
    <div class="title_new">Title</div>
    <%= f.text_field :title %>
    <div class="body_new">Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
<% end %>