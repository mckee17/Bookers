<h1>Books</h1>

<p class="notice"><%= notice %></p>

<% @books.each do |book| %>
<table class="tabel">
  <thead>
    <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="show">
        <%= link_to "Show",SHOW_path(book.id) %>
      </td>
      <td class="edit">
        <%= link_to "Edit",EDIT_path(book.id) %>
      </td>
      <td class="destroy">
        <%= link_to "Destroy",DELETE_path(book.id),method: :delete ,"data-confirm" => "Are you sure?"%>
      </td>
    </tr>
  </tbody>
</table>
<% end %>

<!--新規投稿-->
<h3>
  <div class="newbook">New book</div>
</h3>

  <!--エラー時-->
<div class="errors">
  <% if @book.errors.any? %>
    <p class="errors_title">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </p>
    <p class="errors_body">
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </p>
  <% end %>
</div>

  <!--フォーム-->
<%= form_with model:@book,url:"/books",local:true do |f| %>
    <div class="title_new">Title</div>
    <%= f.text_field :title %>
    <div class="body_new">Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
<% end %>