<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="errors">
    <p class="errors_title">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </p>
    <p class="errors_body">
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </p>
  </div>
<% end %>

  <!--フォーム/#エラー箇所表記未実装-->
  <%= form_with model:@book,local:true do |f| %>
    <div class="title_new">Title</div>
    <%= f.text_field :title %>
    <div class="body_new">Body</div>
    <%= f.text_area :body %>
    <div class="create_new">
    <%= f.submit 'Update Book' %></div>
<% end %>

<div class="link">
    <%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %>
</div>